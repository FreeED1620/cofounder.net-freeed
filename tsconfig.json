{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"], // ‚Üê add this
      "@components/*": ["app/components/*"],
      "@ui/*": ["app/components/ui/*"],
      "@hooks/*": ["app/hooks/*"],
      "@lib/*": ["app/lib/*"],
      "@dashboard/*": ["app/Dashboard/*"],
      "@landing/*": ["app/Landing/*"],
      "@profile/*": ["app/Profile/*"],
      "@styles/*": ["app/styles/*"],
      "@utils/*": ["app/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
